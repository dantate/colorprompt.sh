# Meant for personal use but if you want to use it, go for it.  I make no promises.
# The wrong thing can sometimes make the cursor print the raw codes.  You've been warned.
#
# uses the tput method to set the colors.  Meant exclusively or xterm-256color capable terminals.
#
# usage: copy to a location in your $PATH then issue:
# "source colorprompt [color]" or
# "source colorprompt [colorcode]"


HILIGHT=${1}
LTGRAY=247
GRAY=244
DKGRAY=240
LOLIGHT=$LTGRAY

function colorize ()
{
export PS1="\[$(tput setaf $LOLIGHT)\] [\
\[$(tput setaf $1)\]\u\
\[$(tput setaf $LOLIGHT)\]] \h:\w\
\[$(tput setaf $1)\]\\$\
\[$(tput sgr0)\] "
}

re='^[0-9]+$'
if [[ $1 =~ $re ]]
  then
    colorize $HILIGHT
  else
    case $1 in
    ansired)
      HILIGHT=9
      ;;
    ansiblue)
      HILIGHT=4
      ;;
    ansigreen)
      HILIGHT=10
      ;;
    ansiyellow)
      HILIGHT=7
      ;;
    yellow)
        HILIGHT=190
        LOLIGHT=$GRAY
        ;;
    darkyellow)
        HILIGHT=190
        LOLIGHT=$DKGRAY
        ;;
    lightyellow)
        HILIGHT=190
        LOLIGHT=$LTGRAY
        ;;
    grey|gray)
      HILIGHT=$DKGRAY
      ;;
    darkgrey)
      HILIGHT=$LTGRAY
      LOLIGHT=$DKGRAY
      ;;
    azure)
      HILIGHT=33
      LOLIGHT=$GRAY
      ;;
    lightazure)
      HILIGHT=33
      LOLIGHT=$LTGRAY
      ;;
    darkazure)
      HILIGHT=33
      LOLIGHT=$DKGRAY
      ;;
    blue)
      HILIGHT=031
      LOLIGHT=$GRAY
      ;;
    lightblue)
      HILIGHT=031
      LOLIGHT=$LTGRAY
      ;;
    darkblue)
      HILIGHT=031
      LOLIGHT=$DKGRAY
      ;;
    lightcyan)
      HILIGHT=123
      LOLIGHT=$LTGRAY
      ;;
    cyan)
      HILIGHT=123
      LOLIGHT=$GRAY
      ;;
    darkcyan)
      HILIGHT=123
      LOLIGHT=$DKGRAY
      ;;
    lightgreen)
      HILIGHT=28
      LOLIGHT=$LTGRAY
      ;;
    green)
      HILIGHT=28
      LOLIGHT=$GRAY
      ;;
    darkgreen)
      HILIGHT=28
      LOLIGHT=$DKGRAY
      ;;
    lightred)
      HILIGHT=124
      LOLIGHT=$LTGRAY
      ;;
    red)
      HILIGHT=124
      LOLIGHT=$GRAY
      ;;
    darkred)
      HILIGHT=124
      LOLIGHT=$DKGRAY
      ;;
    lightorange)
      HILIGHT=202
      LOLIGHT=$LTGRAY
      ;;
    orange)
      HILIGHT=202
      LOLIGHT=$GRAY
      ;;
    darkorange)
      HILIGHT=202
      LOLIGHT=$DKGRAY
      ;;
    lightpurple)
      HILIGHT=162
      LOLIGHT=$LTGRAY
      ;;
    darkpurple)
      HILIGHT=162
      LOLIGHT=$DKGRAY
      ;;
    purple)
      HILIGHT=162
      LOLIGHT=$GRAY
      ;;
    white)
      HILIGHT=15
      ;;
    darkwhite)
      HILIGHT=15
      LOLIGHT=$DKGRAY
      ;;

    *)
      echo "unknown.  falling back to safe."
     HILIGHT=256

      ;;

    esac
    colorize $HILIGHT
fi



